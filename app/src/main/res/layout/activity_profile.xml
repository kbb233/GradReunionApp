<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greenbg"
    tools:context=".Profile">


    <TextView
        android:id="@+id/aboutMe_text2"
        android:layout_width="241dp"
        android:layout_height="27dp"
        android:layout_marginStart="86dp"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="13dp"
        android:text="What's up with current me:"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView_currentMe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/gradYear_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="24dp"
        android:text="Grad Year:"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/aboutMe_text2"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/name_text3"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_marginStart="51dp"
        android:layout_marginBottom="17dp"
        android:text="Name:"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/gradYear_text2"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/greenbtn"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/mainbtn"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginVertical="10dp"
            android:background="@color/greenbtn"
            android:contentDescription="main activity"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/megaphone" />

        <ImageButton
            android:id="@+id/eventbtn"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginVertical="10dp"
            android:background="@color/greenbtn"
            android:contentDescription="launch tracker"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/event" />

        <ImageButton
            android:id="@+id/chatbtn"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginVertical="10dp"
            android:background="@color/greenbtn"
            android:contentDescription="fun video"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/bubble_chat" />

        <ImageButton
            android:id="@+id/profilebtn"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginVertical="10dp"
            android:background="@color/greenbtn"
            android:contentDescription="save list"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/user" />
    </LinearLayout>

    <TextView
        android:id="@+id/profile_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="297dp"
        android:text="Profile"
        android:textAlignment="textStart"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_name"
        android:layout_width="249dp"
        android:layout_height="27dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="19dp"
        android:fontFamily="sans-serif-black"
        android:text="TextView"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView_gradYear"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/textView_gradYear"
        android:layout_width="254dp"
        android:layout_height="26dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="sans-serif-black"
        android:text="TextView"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/aboutMe_text2"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/textView_currentMe"
        android:layout_width="386dp"
        android:layout_height="158dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="56dp"
        android:fontFamily="sans-serif-thin"
        android:text="TextView"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="invisible" />


</androidx.constraintlayout.widget.ConstraintLayout>